{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to access bookmarks",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/folder/:folderId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view folders",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/tags": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be authenticated to view tags",
            "rule": "authenticated"
          }
        ],
        "operator": "OR"
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}